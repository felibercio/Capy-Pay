# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# StarkBank Configuration
STARKBANK_PROJECT_ID=your_starkbank_project_id_here
STARKBANK_PRIVATE_KEY_PATH=./keys/starkbank-private-key.pem
STARKBANK_ENVIRONMENT=sandbox
# sandbox ou production

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-backend-domain.com
WEBHOOK_SECRET=your_webhook_secret_key_here

# Database Configuration (Future implementation)
DATABASE_URL=postgresql://username:password@localhost:5432/capypay
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# Wallet Encryption Configuration
WALLET_ENCRYPTION_KEY=your_32_byte_wallet_encryption_key_here
WALLET_SALT=your_wallet_salt_here
KMS_KEY_ID=your_kms_key_id_here
# Para produção, usar AWS KMS, Google Cloud KMS, ou Azure Key Vault

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_TIMEOUT=86400000
# 24 horas em millisegundos

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/capy-pay.log

# External APIs
COINGECKO_API_KEY=your_coingecko_api_key
MORALIS_API_KEY=your_moralis_api_key

# Base Network Configuration
